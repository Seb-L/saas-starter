{
	"name": "api",
	"version": "0.0.1",
	"private": true,
	"description": "",
	"license": "UNLICENSED",
	"author": "",
	"scripts": {
		"build": "nest build && npm run sentry:sourcemaps",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"gen:types": "npx graphql-code-generator --config src/generate-typings.ts",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"migration:create": "npx typeorm migration:create ./src/migrations/$npm_config_name",
		"migration:generate": "npx typeorm -d ./src/config/typeorm.ts migration:generate ./src/migrations/$npm_config_name",
		"migration:revert": "npx typeorm-ts-node-esm -d ./src/config/typeorm.ts migration:revert",
		"migration:run": "npx typeorm-ts-node-esm migration:run -d ./src/config/typeorm.ts",
		"sentry:sourcemaps": "sentry-cli sourcemaps inject --org seb --project saas_starter_api ./dist && sentry-cli sourcemaps upload --org seb --project saas_starter_api ./dist",
		"start": "nest start",
		"start:repl": "pnpm start --entryFile repl --watch",
		"start:debug": "nest start --debug --watch",
		"start:dev": "nest start --watch",
		"start:prod": "node dist/src/main",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@apollo/server": "4.9.4",
		"@nestjs/apollo": "12.0.9",
		"@nestjs/axios": "3.0.0",
		"@nestjs/common": "10.2.7",
		"@nestjs/config": "3.1.1",
		"@nestjs/core": "10.2.7",
		"@nestjs/graphql": "12.0.9",
		"@nestjs/jwt": "10.1.1",
		"@nestjs/mapped-types": "2.0.2",
		"@nestjs/passport": "10.0.2",
		"@nestjs/platform-express": "10.2.7",
		"@nestjs/typeorm": "10.0.0",
		"@ptc-org/nestjs-query-core": "4.2.0",
		"@ptc-org/nestjs-query-graphql": "4.2.0",
		"@ptc-org/nestjs-query-typeorm": "4.2.0",
		"@sentry/cli": "^2.21.3",
		"@sentry/node": "7.80.0",
		"@sentry/profiling-node": "1.2.6",
		"apollo-server-plugin-base": "3.7.2",
		"bcrypt": "5.1.1",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.0",
		"graphql": "16.8.1",
		"graphql-query-complexity": "0.12.0",
		"graphql-type-json": "0.3.2",
		"passport": "0.6.0",
		"passport-jwt": "4.0.1",
		"passport-local": "1.0.0",
		"pg": "8.11.3",
		"reflect-metadata": "0.1.13",
		"rxjs": "7.8.1",
		"slugify": "1.6.6",
		"typeorm": "0.3.17"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "5.0.0",
		"@graphql-codegen/client-preset": "4.1.0",
		"@nestjs/cli": "10.1.18",
		"@nestjs/schematics": "10.0.2",
		"@nestjs/testing": "10.2.7",
		"@swc/core": "1.3.92",
		"@types/bcrypt": "5.0.0",
		"@types/express": "4.17.18",
		"@types/node": "20.8.3",
		"@types/passport-jwt": "3.0.10",
		"@types/passport-local": "1.0.36",
		"@types/supertest": "2.0.14",
		"@vitest/coverage-v8": "0.34.6",
		"eslint-config-custom": "workspace:*",
		"source-map-support": "0.5.21",
		"supertest": "6.3.3",
		"ts-loader": "9.5.0",
		"ts-node": "10.9.1",
		"tsconfig-paths": "4.2.0",
		"typescript": "5.2.2",
		"unplugin-swc": "1.4.2",
		"vitest": "0.34.6"
	}
}
